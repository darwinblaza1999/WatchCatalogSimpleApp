    <script>
        'use strict'

        // gallery
        $('.gallery-lb').each(function () { 
            $(this).magnificPopup({
                delegate: 'a', 
                type: 'image',
                gallery: {
                    enabled: true
                },
                mainClass: 'mfp-fade'
            });
        });

        // scroll
        $('.js-pscroll').each(function () {
            $(this).css('position', 'relative');
            $(this).css('overflow', 'hidden');
            var ps = new PerfectScrollbar(this, {
                wheelSpeed: 1,
                scrollingThreshold: 1000,
                wheelPropagation: false,
            });

            $(window).on('resize', function () {
                ps.update();
            })
        });

        //validation for number only
        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode != 46 && charCode > 31
                && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }

        //decimal textbox validation
        function limitDec(id) {
            // find elements
            var amt = $('.pr')
            var height = $('.he')
            var weight = $('.we')
            var thick = $('.th')
            var diameter = $('.di')

            // handle keyup
            height.on("keyup", function () {
                if (isNaN(height.val())) {
                    height.val(0);
                }
                if (height.val().indexOf(".") > -1 && (height.val().split('.')[1].length > 2)) {
                    height.val(height.val().substring(0, height.val().length - 1));
                }
